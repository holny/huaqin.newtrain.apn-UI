<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Widget.MaterialSheetFab.Note"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/listitem_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/listitem_carrier"
            style="@style/TextAppearance.MaterialSheetFab.Note.Title"
            android:layout_alignParentTop="true" />


        <LinearLayout
            android:id="@+id/note_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/listitem_carrier"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/note_content_spacing">
            <TextView
                android:id="@+id/listitem_mcc"
                style="@style/TextAppearance.MaterialSheetFab.Note"
                android:layout_width="0dp"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/listitem_mnc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/listitem_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
